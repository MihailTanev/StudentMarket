@model IEnumerable<StudentWebMarket.Models.Models.Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Products";

}
<div class="caption">
    <hr />
    @foreach (var product in Model)
    {
        <div class="panel-body">
            <div class='row'>
                <div class="col-md-2">
                    <img width="50" height="100" src="@Url.Action("Image", "Home", new { id = product.ImageId })" class="center-block img-responsive" />
                </div>
                <div class='col-md-4'>
                    <div class='row'>
                        <div class='col-md-12'><a href="@Url.Action("ProductDetails","Product",new {id= product.ProductId})">@product.Description</a></div>
                    </div>
                </div>
                <div class='col-md-2'>
                    <div class='row'>
                        <div class='col-md-offset-4 col-md-10'>@product.CreatedOn.ToString("dd MMM yyyy, mm:hh")</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row">
                        <div class='col-md-offset-6 col-md-6'>@product.SalePrice kr</div>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="row">
                        <div class='col-md-12'>
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole("Admin"))
                                {
                                    <a class='btn btn-danger' href="@Url.Action("Delete", "Product", new { id = product.ProductId })" style='width:50px;padding:4px 11px;font-size:10px;'>
                                        Delete
                                    </a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <hr />
        </div>
    }
</div>

