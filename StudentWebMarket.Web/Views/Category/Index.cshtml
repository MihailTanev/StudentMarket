@model IEnumerable<StudentWebMarket.Models.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Student Market Management</h2>

<a href="@Url.Action("Create","Category")" style="margin-bottom:10px;" class="btn btn-primary">Create Category</a>
@using (Html.BeginForm("Search", "SearchProduct", FormMethod.Get))
{
    <div>
        @Html.TextBox("SearchString", null, new { @class = "form-control control-label col-md-2", placeholder = "Products" })
        &nbsp;
        <input type="submit" class="btn btn-primary" value="Search" />
    </div>
}
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Category")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("CategoryProducts", "Home", new { Id=item.CategoryId})">
                    <span class="glyphicon glyphicon-folder-open"></span> &nbsp;
                    @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId })
            </td>
        </tr>
    }

</table>
